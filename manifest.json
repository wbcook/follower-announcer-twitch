{
	"manifest_version":1,
	"type":"WebApp",
	"meta":{
		"name":"Follower Announcer",
		"version":"1.0.0",
		"minimum-overwolf-version":"0.77.10",
		"author":"William Cook",
		"icon":"IconMouseOver.png",
		"icon_gray":"IconMouseNormal.png",
		"description":"Alerts you when a viewer follows you on Twitch."
	},
	"permissions":
		["Logging"],
	"data": {
		"start_window":"MainWindow",
		"windows":{
			"MainWindow":{
					"file":"Files/index.html",
					"transparent":false,
					"resizable":true,
					"size":{"width":450, "height":450},
					"min_size":{"width":450, "height":125},
					"max_size":{"width":450, "height":450}
			}
		}
	},
	"externally_connectable":{
      "matches":[
        "https://*.twitch.tv",
        "http://*.twitch.tv",
        "http://*.overwolf.com"
      ]
    },
}
